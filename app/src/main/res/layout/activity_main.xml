<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zeroingin.x.facedemo.MainActivity">
    <LinearLayout
        android:id="@+id/LLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/backheading"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayout2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/LLayout1"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3761BD"
            android:text="Entrance Guard"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayout3"
        android:layout_centerInParent="true"
        android:layout_below="@+id/LLayout2"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            android:layout_width="240dp"
            android:background="#3761BD"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="注 册 人 脸" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayout4"
        android:layout_centerInParent="true"
        android:layout_below="@+id/LLayout3"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button2"
            android:layout_width="240dp"
            android:background="#3761BD"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="检 测 识 别"/>
    </LinearLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presented by Anappleteam"/>
    </LinearLayout>
</RelativeLayout>
