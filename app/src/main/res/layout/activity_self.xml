<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/head_circle"
            android:layout_centerVertical="true"
            android:background="@drawable/circlehead"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/name_parent"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:text="家长："
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/head_circle"/>
        <TextView
            android:id="@+id/name_child"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:text="孩子："
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/head_circle"
            android:layout_below="@+id/name_parent"/>
    </RelativeLayout>
    <GridLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:rowCount="3"
        android:columnCount="3">

        <TextView
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:text="我 的 功 能"
            android:textSize="20dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/Button_self1"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#8eded5"
            android:text="个人信息"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Button_self2"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#8eded5"
            android:text="孩子信息"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Button_self3"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#8eded5"
            android:text="退出app"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Button_self4"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#8eded5"
            android:text="版本更新"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Button_self5"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#8eded5"
            android:text="意见反馈"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Button_self6"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#8eded5"
            android:text="临时接送
管理"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>
    </GridLayout>
</LinearLayout>